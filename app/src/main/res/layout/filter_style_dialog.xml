<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_filter_dialog"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="Hair Length"
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold" />


    <RadioGroup
        android:id="@+id/rg_hairlength"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <com.orca.dotz.customviews.FilterRadioButton
            android:id="@+id/small"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="@drawable/selector_hairlength"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="S"
            android:textColor="@color/filter_hairstyle" />

        <com.orca.dotz.customviews.FilterRadioButton
            android:id="@+id/medium"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/selector_hairlength"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="M"
            android:textColor="@color/filter_hairstyle" />

        <com.orca.dotz.customviews.FilterRadioButton
            android:id="@+id/large"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="4dp"
            android:background="@drawable/selector_hairlength"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:text="L"
            android:textColor="@color/filter_hairstyle" />
    </RadioGroup>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Hair Quality"
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rg_hairQuality"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">


        <com.orca.dotz.customviews.FilterRadioButton
            android:id="@+id/soft"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:background="@drawable/selector_hairlength_rect"
            android:button="@android:color/transparent"
            android:gravity="center|center_vertical"
            android:text="SOFT"
            android:textColor="@color/filter_hairstyle"
            android:textSize="14dp" />


        <com.orca.dotz.customviews.FilterRadioButton
            android:id="@+id/hard"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:background="@drawable/selector_hairlength_rect"
            android:button="@android:color/transparent"
            android:gravity="center|center_vertical"
            android:text="HARD"
            android:textColor="@color/filter_hairstyle"
            android:textSize="14dp" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:text="Face Cut"
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rg_faceCut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <com.orca.dotz.customviews.FilterRadioButton
            android:id="@+id/oblong"
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:background="@drawable/selector_hairlength_rect"
            android:button="@android:color/transparent"
            android:gravity="center|center_vertical"
            android:text="OBLONG"
            android:textColor="@color/filter_hairstyle"
            android:textSize="12dp" />

        <com.orca.dotz.customviews.FilterRadioButton
            android:id="@+id/diamond"
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:background="@drawable/selector_hairlength_rect"
            android:button="@android:color/transparent"
            android:gravity="center|center_vertical"
            android:text="DIAMOND"
            android:textColor="@color/filter_hairstyle"
            android:textSize="12dp" />

        <com.orca.dotz.customviews.FilterRadioButton
            android:id="@+id/heart"
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:background="@drawable/selector_hairlength_rect"
            android:button="@android:color/transparent"
            android:gravity="center|center_vertical"
            android:text="HEART"
            android:textColor="@color/filter_hairstyle"
            android:textSize="12dp" />

    </RadioGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/apply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="Apply"
            android:textColor="@color/primary_text" />

        <View
            android:layout_width="0.7dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@color/primary" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/primary_text" />
    </LinearLayout>
</LinearLayout>